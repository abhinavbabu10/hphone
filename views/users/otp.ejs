<body>
 <div id="otp-container">
   <h2>Secure OTP Verification</h2>
   <form id="otp-form" method="post" onsubmit="return validateForm()">
     <input name="otp" type="text" id="otp-input" placeholder="Enter OTP"  maxlength="6" required>
     <br>
     <button type="submit" id="submit-btn">Verify OTP</button>
     <button type="button" id="resend-btn" onclick="resendOTP()" disabled>Resend OTP</button>
   </form>
   <p id="timer">Timer: 60 seconds</p>
   <p id="error-message"></p>
 </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    let timerSeconds = 60; 
    let resendTimerSeconds = 30;
    let timerInterval;
    let resendTimerInterval;
    let resendDisabled = true;
    let formSubmitted = false;

    function startTimer() {
        timerInterval = setInterval(function() {
            timerSeconds--;
            document.getElementById("timer").innerText = "Timer: " + timerSeconds + " seconds";
            if (timerSeconds <= 0) {
                clearInterval(timerInterval);
                document.getElementById("timer").innerText = "Time's up!";
                enableResendButton();
                disableSubmitButton();
            }
        }, 1000);
    }

    function enableResendButton() {
        document.getElementById("resend-btn").disabled = false;
        resendDisabled = false;
    }

    function disableResendButton() {
        document.getElementById("resend-btn").disabled = true;
        resendDisabled = true;
    }

    function disableSubmitButton() {
        document.getElementById("submit-btn").disabled = true;
    }

    function enableSubmitButton() {
        document.getElementById("submit-btn").disabled = false;
    }

    function validateForm() {
    const otpInput = document.getElementById("otp-input").value;
    console.log(`enetered otp : ${otpInput }`)
    const errorMessage = document.getElementById("error-message");

   
    if (otpInput.trim() === "") {
        errorMessage.innerText = "Enter valid OTP";
        enableSubmitButton(); 
        return false;
    }

   
    if (!/^\d{6}$/.test(otpInput)) {
        errorMessage.innerText = "Invalid OTP";
        enableSubmitButton(); 
        return false;
    }

   
    errorMessage.innerText = "";
    formSubmitted = true;
    enableSubmitButton();
    verifyOTP(otpInput);
    return false;
}



    function resendOTP() {
        if (!resendDisabled) {
            disableResendButton();
            startResendTimer();
   
            fetch('/resendOTP', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log(data.message);
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'OTP sent successfully'
                });
                enableSubmitButton();
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to resend OTP. Please try again later.'
                });
            });
        }
    }

    function startResendTimer() {
        resendDisabled = true; 
        resendTimerInterval = setInterval(() => {
            resendTimerSeconds--;
            document.getElementById("timer").innerText = "Resend in: " + resendTimerSeconds + " seconds";
            if (resendTimerSeconds <= 0) {
                clearInterval(resendTimerInterval);
                document.getElementById("timer").innerText = "Resend Now";
                enableResendButton();
            }
        }, 1000);
    }

    function verifyOTP(otp) {
        fetch('/verifyOTP', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ enteredOtp: otp })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            if (!data.error) {
                window.location.href = '/login';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            document.getElementById('error-message').textContent = 'Enter valid OTP.';
        });
    }

    startTimer();

</script>
</body>
