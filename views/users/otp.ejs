<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>OTP Verification</title>
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0; display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f2f2f2;">
  <div style="max-width: 400px; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <h1>OTP Verification</h1>
    <div style="margin-top: 20px;">
      <label for="otp" style="display: block; margin-bottom: 5px;">Enter OTP:</label>
      <input type="text" id="otp" maxlength="6" style="width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;">
      <button onclick="verifyOTP()" style="padding: 10px 20px; background-color: #007bff; color: #fff; border: none; border-radius: 4px; cursor: pointer;">Verify OTP</button>
      <p id="message" style="margin-top: 10px; font-size: 14px;"></p>
    </div>
  </div>
  <script>
    function verifyOTP() {
      const enteredOTP = document.getElementById('otp').value;
      const generatedOTP = '123456'; // Replace this with your actual generated OTP

      if (enteredOTP === generatedOTP) {
        document.getElementById('message').innerText = 'OTP verified successfully!';
      } else {
        document.getElementById('message').innerText = 'Invalid OTP. Please try again.';
      }
    }
  </script>
</body>
</html>
