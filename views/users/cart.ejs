      <script>
        const qtyUpButtons = document.querySelectorAll('.qty-up');
        const qtyDownButtons = document.querySelectorAll('.qty-down');
    
        qtyUpButtons.forEach(button => {
            const maxStock = parseInt(button.dataset.maxStock);
            const productId = button.dataset.productId;
            const cartId = button.dataset.cartId;
            const qtyVal = button.parentNode.querySelector('.qty-val');
    
            button.addEventListener('click', async () => {
                let currentQty = parseInt(qtyVal.textContent) + 1;
                if (currentQty > 10) {
                    Swal.fire('Maximum quantity reached', 'You can only buy 10 products', 'warning');
                } else if (currentQty > maxStock) {
                    Swal.fire('Out of stock', `The maximum quantity for this item is ${maxStock}`, 'warning');
                } else {
                    await updateQuantity(cartId, productId, currentQty);
                }
            });
        });
    
        qtyDownButtons.forEach(button => {
            const productId = button.dataset.productId;
            const cartId = button.dataset.cartId;
            const qtyVal = button.parentNode.querySelector('.qty-val');
            const qtyUpButton = button.parentNode.querySelector('.qty-up');
    
            button.addEventListener('click', async () => {
                let currentQty = parseInt(qtyVal.textContent);
    
                if (currentQty > 1) {
                    await updateQuantity(cartId, productId, currentQty - 1);
                    if (qtyUpButton.disabled) {
                        qtyUpButton.disabled = false;
                    }
                }
            });
        });
    
        async function updateQuantity(cartId, productId, quantity) {
            try {
                const response = await fetch('/update-quantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ cartId, productId, quantity }),
                });
    
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
    
