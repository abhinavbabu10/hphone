   <script>
    const ERRORS = {
      PRODUCT_NAME_REQUIRED: 'Please enter a product name.',
      PRODUCT_NAME_MIN_LENGTH: 'Product name must be at least 3 characters long and contain only letters.',
      PRODUCT_DESCRIPTION_MIN_LENGTH: 'Product description must be at least 10 characters long.',
      MEDIA_REQUIRED: 'Please select at least one media file.',
      MEDIA_INVALID_TYPE: 'Only image/jpeg, image/png, image/gif, and image/webp files are allowed.',
      PRICE_REQUIRED: 'Please enter the product price.',
      PRICE_INVALID: 'Price must be a positive number.',
      CATEGORY_REQUIRED: 'Please select a category.',
      STOCK_REQUIRED: 'Stock must be greater than 0.',
    };
    
    document.getElementById('productForm').addEventListener('submit', function(event) {
      event.preventDefault();
      document.querySelectorAll('.invalid-feedback').forEach(function(element) {
        element.textContent = '';
        element.classList.remove('d-block');
      });
      var name = document.getElementById('productName');
      var nameError = document.querySelector('.name-error');
      if (!name.value) {
        nameError.textContent = ERRORS.PRODUCT_NAME_REQUIRED;
        nameError.classList.add('d-block');
      } else if (name.value.length < 3) {
        nameError.textContent = ERRORS.PRODUCT_NAME_MIN_LENGTH;
        nameError.classList.add('d-block');
      }
    
      var description = document.getElementById('productDescription');
      var descriptionError = document.querySelector('.description-error');
      if (description.value.length < 10) {
        descriptionError.textContent = ERRORS.PRODUCT_DESCRIPTION_MIN_LENGTH;
        descriptionError.classList.add('d-block');
      }
    
      var media = document.getElementById('productMedia');
      var mediaError = document.querySelector('.media-error');
      if (!media.files.length) {
        mediaError.textContent = ERRORS.MEDIA_REQUIRED;
        mediaError.classList.add('d-block');
      } else {
        const fileType = media.files[0].type;
        if (!['image/jpeg', 'image/png', 'image/gif', 'image/webp'].includes(fileType)) {
          mediaError.textContent = ERRORS.MEDIA_INVALID_TYPE;
          mediaError.classList.add('d-block');
        }
      }
    
      var price = document.getElementById('productPrice');
      var priceError = document.querySelector('.price-error');
      if (!price.value) {
        priceError.textContent = ERRORS.PRICE_REQUIRED;
        priceError.classList.add('d-block');
      } else if (!/^\d+(\.\d+)?$/.test(price.value)) {
        priceError.textContent = ERRORS.PRICE_INVALID;
        priceError.classList.add('d-block');
      }
    
      var category = document.getElementById('productCategory');
      var categoryError = document.querySelector('.category-error');
      if (category.value === '') {
        categoryError.textContent = ERRORS.CATEGORY_REQUIRED;
        categoryError.classList.add('d-block');
      }
    
      var stock = document.getElementById('productStock');
      var stockError = document.querySelector('.stock-error');
      if (stock.value <= 0) {
        stockError.textContent = ERRORS.STOCK_REQUIRED;
        stockError.classList.add('d-block');
      }
      if (document.querySelectorAll('.invalid-feedback.d-block').length === 0) {
        this.submit();
      }
    });
    </script>

<script>
  document.getElementById('productMedia').addEventListener('change', function(event) {
    const imagePreview = document.getElementById('imagePreview');
    imagePreview.innerHTML = '';
    
    Array.from(event.target.files).forEach((file, index) => {
      const reader = new FileReader();
      reader.onload = function(e) {
        const imageContainer = document.createElement('div');
        imageContainer.classList.add('image-container');
        
        const img = document.createElement('img');
        img.src = e.target.result;
        img.alt = file.name;
        imageContainer.appendChild(img);
        
        const deleteBtn = document.createElement('button');
        deleteBtn.innerHTML = '&times;';
        deleteBtn.classList.add('delete-btn');
        deleteBtn.addEventListener('click', () => {
          imagePreview.removeChild(imageContainer);
          const dataTransfer = new DataTransfer();
          const files = Array.from(event.target.files);
          files.splice(index, 1);
          files.forEach(file => dataTransfer.items.add(file));
          event.target.files = dataTransfer.files;
        });
        imageContainer.appendChild(deleteBtn);
        
        imagePreview.appendChild(imageContainer);
      };
      reader.readAsDataURL(file);
    });
  });
</script>

<script>
  document.getElementById('productCategory').addEventListener('change', function() {
    const selectedOption = this.options[this.selectedIndex];
    const discount = selectedOption.getAttribute('data-discount');
    const price = document.getElementById('productPrice').value;

    if (price && discount) {
      const discountedPrice = price - (price * discount / 100);
      document.getElementById('categoryDiscountPrice').value = discountedPrice.toFixed(2);
    }
  });

  document.getElementById('productPrice').addEventListener('input', function() {
    const categorySelect = document.getElementById('productCategory');
    const selectedOption = categorySelect.options[categorySelect.selectedIndex];
    const discount = selectedOption.getAttribute('data-discount');
    const price = this.value;

    if (price && discount) {
      const discountedPrice = price - (price * discount / 100);
      document.getElementById('categoryDiscountPrice').value = discountedPrice.toFixed(2);
    }
  });
</script>
  
