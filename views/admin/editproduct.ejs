                        </div>
                        <div>
                            <label for="productMedia" class="form-label">Product Media</label>
                            <input type="file" class="form-control-file" id="productMedia" name="media" multiple >
                            <div class="invalid-feedback"></div>
                          </div>
                        <div>
                          <label for="productPrice" class="form-label">Price</label>
                          <input type="number" class="form-control" id="productPrice" name="price" placeholder="Enter product price" value="<%= product.price %>" required>
                          <div class="invalid-feedback"></div>
                        </div>
                          <div>
