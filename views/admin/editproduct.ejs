                            <select class="form-control" id="productCategory" name="category" required>
                              <option value="" disabled>Select a category</option>
                              <% category.forEach(category => { %>
                                <option value="<%= category._id %>" <%= product.category === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
                              <% }); %>
                            </select>
                      <div class="invalid-feedback">Please select a category.</div>
                          </div>
                        <div>
                          <label for="productStock" class="form-label">Stock</label>
                          <input type="number" class="form-control" id="productStock" name="stock" placeholder="Enter product stock" value="<%= product.stock %>" required>
