                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td>
                                        <% order.items.forEach(item => { %>
                                            <% if (item.media && item.media.length > 0) { %>
                                                <img src="/Productimages/<%= item.media[0] %>" alt="Product Image" class="img-thumbnail" style="width: 100px; height: 120px;">
                                            <% } else { %>
                                                <img src="/Productimages/default.png" alt="Default Image" class="img-thumbnail" style="width: 100px; height: 120px;">
                                            <% } %>
                                        <% }); %>
                                    </td>
                                    <td><b><%= order.user.name %></b></td>
                                    <td><%= order.user.email %></td>
                                    <td>$<%= order.billTotal.toFixed(2) %></td>
                                    <td>
                                        <% switch (order.orderStatus) {
                                            case 'Pending':
                                                %><span class="badge rounded-pill alert-warning"><%= order.orderStatus %></span><%
                                                break;
                                            case 'Cancelled':
                                                %><span class="badge rounded-pill alert-danger"><%= order.orderStatus %></span><%
                                                break;
                                            case 'Delivered':
                                                %><span class="badge rounded-pill alert-success"><%= order.orderStatus %></span><%
                                                break;
                                            case 'Shipped':
                                                %><span class="badge rounded-pill alert-warning"><%= order.orderStatus %></span><%
                                                break;
                                            case 'Confirmed':
                                                %><span class="badge rounded-pill alert-success"><%= order.orderStatus %></span><%
                                                break;
                                            case 'Returned':
                                                %><span class="badge rounded-pill alert-warning"><%= order.orderStatus %></span><%
                                                break;
                                            default:
                                                %><span class="badge rounded-pill"><%= order.orderStatus %></span><%
                                                break;
                                        } %>
                                    </td>
                                    <td><%= order.orderDate.toDateString() %></td>
                                    <td class="text-end">
                                        <a href="/admin/orderdetails?id=<%= order._id %>" class="btn btn-md rounded font-sm">Detail</a>
                                        <div class="dropdown">
