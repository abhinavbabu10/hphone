<script>
   document.getElementById('couponname').addEventListener('input', validateCouponForm);
document.getElementById('couponcode').addEventListener('input', validateCouponForm);
document.getElementById('discountamount').addEventListener('input', validateCouponForm);
document.getElementById('minimumamount').addEventListener('input', validateCouponForm);

document.getElementById('createCouponForm').addEventListener('submit', function(event) {
    event.preventDefault();
    if (validateCouponForm()) {
        this.submit();
    }
});

function validateCouponForm() {
    let isValid = true;
    
    const couponName = document.getElementById('couponname').value.trim();
    const couponCode = document.getElementById('couponcode').value.trim();
    const discountAmount = document.getElementById('discountamount').value.trim();
    const minimumAmount = document.getElementById('minimumamount').value.trim();
    
    const couponNameError = document.getElementById('couponNameError');
    const couponCodeError = document.getElementById('couponCodeError');
    const discountAmountError = document.getElementById('discountAmountError');
    const minimumAmountError = document.getElementById('minimumAmountError');

    couponNameError.textContent = '';
    couponCodeError.textContent = '';
    discountAmountError.textContent = '';
    minimumAmountError.textContent = '';
    
    if (couponName === '' || couponName.length < 3) {
        couponNameError.textContent = 'Coupon name must be at least 3 characters long';
        isValid = false;
    }
    
    const codePattern = /^[A-Z0-9]{5,10}$/;
    if (!codePattern.test(couponCode)) {
        couponCodeError.textContent = 'Coupon code must be 5-10 uppercase letters or digits';
        isValid = false;
    }
    
    if (isNaN(discountAmount) || discountAmount <= 0) {
        discountAmountError.textContent = 'Discount amount must be a positive number';
        isValid = false;
    }
    
    if (isNaN(minimumAmount) || minimumAmount <= 0) {
        minimumAmountError.textContent = 'Minimum amount must be a positive number';
        isValid = false;
    }
    
    return isValid;
}
  
    </script>

