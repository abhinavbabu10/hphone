<script>
    
const forms = document.querySelectorAll('form');
 forms.forEach(form => {
     form.addEventListener('submit', async (e) => {
         e.preventDefault();
         const userId = e.target.querySelector('input[name="userId"]').value;
         const blocked = e.target.querySelector('input[name="blocked"]').value;
         const row = e.target.closest('tr');
         const statusCell = row.querySelector('td:nth-child(2)');
 
         swal({
             title: `Are you sure?`,
             text: `You want to ${e.target.querySelector('button').textContent.includes('Block') ? 'block' : 'unblock'} this user?`,
             icon: "warning",
             buttons: true,
             dangerMode: true,
         })
         .then((willDelete) => {
             if (willDelete) {
                 fetch(`/admin/users/${userId}/block`, {
                     method: 'POST',
                     headers: { 'Content-Type': 'application/json' },
                     body: JSON.stringify({ blocked })
                 })
                 .then(response => {
                     if (response.ok) {
                         swal(`The user has been ${e.target.querySelector('button').textContent.includes('Block') ? 'blocked' : 'unblocked'} successfully!`, {
                             icon: "success",
                         }).then(()=>{window.location.reload()})
                     }
                 })
                 .catch(error => {
                     console.error('Error:', error);
                     swal(`Error: ${error}`, {
                         icon: "error",
                     });
                 });
             }
         });
     });
 });
 </script>

