    <script>
function showEditModal(categoryId, categoryName, categoryStatus, discount) {
  $('#editCategoryId').val(categoryId);   
  $('#editCategoryName').val(categoryName);
  $('#editCategoryNameError').empty();
  $('#editCategoryStatus').val(categoryStatus);
  $('#editCategoryDiscount').val(discount);
  $('#editCategoryDiscountError').empty();
  $('#editCategoryModal').modal('show');
}

function validateForm(categoryId) {
  const discountInput = document.getElementById('editCategoryDiscount');
  const discountError = document.getElementById('editCategoryDiscountError');
  const discountValue = parseFloat(discountInput.value);

  if (isNaN(discountValue) || discountValue < 0 || discountValue > 100) {
    discountInput.classList.add('is-invalid');
    discountError.textContent = 'Discount must be between 0 and 100';
    return false;
  } else {
    discountInput.classList.remove('is-invalid');
    discountError.textContent = '';
    saveChanges(categoryId);
  }
}


function saveChanges(categoryId) {
  const categoryName = $('#editCategoryName').val();
  const categoryStatus = $('#editCategoryStatus').val();
  const categoryDiscount = $('#editCategoryDiscount').val();

  fetch(`/admin/update-category/${categoryId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ 
      name: categoryName, 
      status: categoryStatus, 
      discount: categoryDiscount 
    }),
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      const row = $(`#categoryRow-${categoryId}`);
      row.find('.categoryName').text(categoryName);
      row.find('.categoryStatus').text(categoryStatus.charAt(0).toUpperCase() + categoryStatus.slice(1));
      row.find('.categoryDiscount').text(categoryDiscount + '%');
      location.reload()
    } else {
      console.error('Failed to update category:', data.message);
      if (data.error === 'category_exists') {
        $('#editCategoryNameError').text('Category already exists').show();
      } else {
        $('#editCategoryNameError').text(data.message).show();
      }
    }

  })
  .catch(error => {
    console.error('Error updating category:', error);
    $('#editCategoryNameError').text('An error occurred while updating the category').show();
  });
}

$('#editCategoryForm').on('submit', function(event) {
  event.preventDefault();
  const categoryId = $('#editCategoryId').val();
  validateForm(categoryId);
});


  function confirmDelete(categoryId) {
  Swal.fire({
    title: 'Are you sure?',
    text: 'You will not be able to recover this category!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#3085d6',
    confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/admin/delete-category/${categoryId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => {
        if (response.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Deleted!',
            text: 'The category has been deleted.'
          }).then(() => {
            window.location = "/admin/category";
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!'
          });
        }
      })
      .catch(error => {
        console.error('Error:', error);
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'An error occurred while deleting the category.'
        });
      });
    }
  });
}
