    <script>
      document.getElementById('createCategoryBtn').addEventListener('click', function(event) {
          var categoryName = document.getElementById('category-name').value.trim();
  
          if (categoryName === '') {
              event.preventDefault();
              Swal.fire({
                  icon: 'warning',
                  title: 'Input Required',
                  text: 'Please enter something in the Name field.',
                  confirmButtonText: 'OK'
              });
          }
      });
  </script>
    
    <script>
      function editCategory(categoryId, categoryName, categoryStatus) {
        Swal.fire({
          title: 'Edit Category',
          html: `
            <input id="categoryNameInput" class="swal2-input" value="${categoryName}">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoryStatus" id="activeRadio" value="active" ${categoryStatus === 'active' ? 'checked' : ''}>
              <label class="form-check-label" for="activeRadio">Active</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="categoryStatus" id="inactiveRadio" value="inactive" ${categoryStatus === 'inactive' ? 'checked' : ''}>
              <label class="form-check-label" for="inactiveRadio">Inactive</label>
            </div>
          `,
          showCancelButton: true,
          confirmButtonText: 'Save',
          preConfirm: () => {
            const categoryName = document.getElementById('categoryNameInput').value;
            const categoryStatus = document.querySelector('input[name="categoryStatus"]:checked').value;
            return { categoryName, categoryStatus };
          }
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/update-category/${categoryId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                name: result.value.categoryName,
                status: result.value.categoryStatus
              })
            })
            .then(response => {
              if (response.ok) {
                Swal.fire({
                  icon: 'success',
                  title: 'Success',
                  text: 'Category updated successfully'
                }).then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'Failed to update category'
                });
              }
            })
            .catch(error => {
              console.error('Error:', error);
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while updating the category'
              });
            });
          }
        });
      }


  function confirmDelete(categoryId) {
  Swal.fire({
    title: 'Are you sure?',
    text: 'You will not be able to recover this category!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#3085d6',
    confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/admin/delete-category/${categoryId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => {
        if (response.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Deleted!',
            text: 'The category has been deleted.'
          }).then(() => {
            window.location = "/admin/category";
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!'
          });
        }
      })
      .catch(error => {
        console.error('Error:', error);
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'An error occurred while deleting the category.'
        });
      });
    }
  });
}
